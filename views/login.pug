doctype html
html
  head
    include includes/commonhead

  body
    .login-page-wrapper.pt-5
      h1.display-5.text-center.text-white Admin Dashboard
      .login-card.mx-auto
        .login-card-heading.bg-primary.text-white
          h4.mb-0.card-title Login
        .login-card-body
          include includes/messages.pug
          form(action="/login" method="post" data-parsley-validate)
            input.form-control.mt-4(type="email" placeholder="Email" name="email" id="email" required)
            input.form-control.mt-3(type="password" placeholder="Password" name="password" id="password" required)
            input.btn.btn-primary.form-control.mt-3(type="submit" value="Login")    
    include includes/commonscripts
